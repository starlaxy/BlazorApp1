<div class="@CardCssClass">
    <div class="card-header">
        @Header
    </div>
    <div class="card-body">
        @Body
    </div>
</div>

@code {
    [Parameter] public RenderFragment Header { get; set; }
    [Parameter] public RenderFragment Body { get; set; }
    [Parameter] public int ColumnSpan { get; set; } = 1; // Default to 1 if not specified
    [Parameter] public int RowSpan { get; set; } = 1; // Default to 1 if not specified

    private string CardCssClass => $"card col-span-{ColumnSpan} row-span-{RowSpan}";
}